{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  }
}
